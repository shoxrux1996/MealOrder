<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoxrux.mealorder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OrderListActivity" />
        <activity
            android:name=".MenuInfoActivity" />
        <activity
            android:name=".MakeOrderActivity" />
        <activity
            android:name=".AdminActivity"
            android:label="@string/title_activity_admin" />
        <activity
            android:name=".AdminMenuInfoActivity">

        </activity>
        <activity
            android:name=".AdminMenuCreateActivity">

        </activity>
        <activity
            android:name=".AdminOrderInfoActivity"
            android:label="@string/title_activity_admin_order_info">

        </activity>
    </application>

</manifest>