<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoxrux.mealorder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.OrderListActivity" />
        <activity
            android:name=".Activity.MenuInfoActivity" />
        <activity
            android:name=".Activity.MakeOrderActivity" />
        <activity
            android:name=".Activity.AdminActivity"
            android:label="@string/title_activity_admin" />
        <activity
            android:name=".Activity.AdminMenuInfoActivity">

        </activity>
        <activity
            android:name=".Activity.AdminMenuCreateActivity"
            android:label="@string/title_activity_admin_order_create">

        </activity>
        <activity
            android:name=".Activity.AdminOrderInfoActivity"
            android:label="@string/title_activity_admin_order_info">

        </activity>
    </application>

</manifest>